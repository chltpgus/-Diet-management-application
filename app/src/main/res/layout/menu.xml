<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 추천 레시피"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 추천 운동"
        android:textSize="25dp"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주간 캘린더"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|bottom">
        <Button
            android:id="@+id/btnRecipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/spoon3"
            android:layout_weight="1"
            />


        <Button
            android:id="@+id/btnRefrige"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/refri3"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/btnCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/caren3"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/btnExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/exer3"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>